{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "useDefineForClassFields": true,
        "types": ["vite-svg-loader", "webpack-env"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["esnext", "dom"],

        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/service/demo.js", "src/main.js"],
    "exclude": ["node_modules", "dist"]
}
